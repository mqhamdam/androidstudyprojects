<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDE8E8"
    android:fitsSystemWindows="true"
    android:clipToPadding="false"

    tools:context=".GameActivity">

    <TextView
        android:id="@+id/textLastGuess"
        android:layout_width="325dp"
        android:layout_height="51dp"
        android:layout_marginTop="80dp"
        android:text="Your Last Guess  "
        android:textAlignment="center"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textAttempts"
        android:layout_width="338dp"
        android:layout_height="42dp"
        android:layout_marginTop="40dp"

        android:text="Attempts remianing: "
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textLastGuess" />

    <TextView
        android:id="@+id/textHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="40dp"
        android:text="Increase/Decrease"
        android:textAlignment="center"
        android:textSize="45sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textAttempts" />

    <EditText
        android:id="@+id/editTextNumber"
        android:layout_width="246dp"
        android:layout_height="81dp"
        android:layout_marginTop="60dp"
        android:ems="10"
        android:hint="Enter your guess here"

        android:inputType="number"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textHint" />

    <Button
        android:id="@+id/btnConfirm"
        android:layout_width="253dp"
        android:layout_height="63dp"
        android:layout_marginTop="104dp"
        android:text="Button"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextNumber" />
</androidx.constraintlayout.widget.ConstraintLayout>